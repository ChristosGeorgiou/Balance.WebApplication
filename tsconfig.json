{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "core-js",
      "requirejs"
    ],
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6"
    ],
    "baseUrl": "./src",
    "paths": {
      "@balnc/common/*": [
        "modules/_common/*"
      ],
      "@balnc/core/*": [
        "modules/_core/*"
      ],
      "@balnc/business/*": [
        "modules/business/*"
      ],
      "@balnc/marketing/*": [
        "modules/marketing/*"
      ],
      "@balnc/teams/*": [
        "modules/teams/*"
      ],
      "@balnc/booking/*": [
        "modules/booking/*"
      ],
      "@balnc/report/*": [
        "modules/report/*"
      ],
      "environments/*": [
        "environments/*"
      ]
    }
  },
  "exclude": [
    "./node_modules",
    "./log.txt",
    "./config.json"
  ],
  "include": [
    "./src/**/*.ts",
    "./schemas/**/*.json"
  ],
  "filesGlob": [
    "**/*.ts",
    "./schemas/**/*.json",
    "!node_modules/**"
  ]
}