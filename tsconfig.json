{
  "compileOnSave": false,
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@balnc/core": [
        "src/app/_core"
      ],
      "@balnc/shared": [
        "src/app/_shared"
      ]
    }
  }
}