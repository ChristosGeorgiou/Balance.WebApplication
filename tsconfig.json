{
  "compileOnSave": false,
  "buildOnSave": false,
  "preserveWhitespaces":false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types":[
      "core-js"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@balnc/common/*": [
        "modules/_common/*"
      ],
      "@balnc/core/*": [
        "modules/_core/*"
      ],
      "@balnc/business/*": [
        "modules/business/*"
      ],
      "@balnc/marketing/*": [
        "modules/marketing/*"
      ],
      "@balnc/teams/*": [
        "modules/teams/*"
      ],
      "@balnc/booking/*": [
        "modules/booking/*"
      ],
      "@balnc/report/*": [
        "modules/report/*"
      ],
      "environments/*": [
        "environments/*"
      ]
    }
  }
}