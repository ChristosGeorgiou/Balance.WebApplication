{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@balnc/common": [
        "src/packages/_common"
      ],
      "@balnc/core": [
        "src/packages/_core"
      ],
      "@balnc/presentations": [
        "src/packages/presentations"
      ],
      "@balnc/business/*": [
        "src/packages/business/*"
      ],
      "@balnc/boards": [
        "src/packages/boards"
      ],
      "@balnc/projects": [
        "src/packages/projects"
      ],
      "@balnc/booking/*": [
        "src/packages/booking/*"
      ],
      "@balnc/report/*": [
        "src/packages/report/*"
      ],
      "environments/*": [
        "environments/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
