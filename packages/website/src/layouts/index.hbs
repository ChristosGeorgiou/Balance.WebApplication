{{>_header}}
{{>navbar}}

<header class="masthead">
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-lg-4 my-auto">
        <div class="header-content mx-auto">
          <div class="display-1">{{sitename}}</div>
          <h1 class="mb-5">{{description}}</h1>
          <a href="{{app}}" class="btn btn-outline btn-xl js-scroll-trigger">go to app</a>
        </div>
      </div>
      <div class="col-lg-8 my-auto">
        <div class="device-container">
          <div class="device-mockup macbook">
            <div class="device">
              <div class="screen">
                <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                <img src="/img/screenshot.png" class="img-fluid" alt="">
              </div>
              <div class="button">
                <!-- You can hook the "home button" to some JavaScript events or just remove it -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<section class="features" id="features">
  <div class="container">
    <div class="section-heading text-center">
      <h2>
        <Fieldset>Features & Modules</Fieldset>
      </h2>
      <p class="text-muted">What is included</p>
      <hr>
    </div>
    <div class="row">
      {{#each features}}
      <div class="col-lg-4">
        <div class="feature-item">
          <i class="{{icon}} text-primary"></i>
          <h3>{{title}}</h3>
          <p class="text-muted">{{description}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

<section class="bg-light">
  {{>_mailerlite-signup}}
</section>

{{>footer}}
