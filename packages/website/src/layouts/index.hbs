{{>_header}}
{{>navbar}}

<header class="masthead">
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-lg-4 my-auto">
        <div class="header-content mx-auto">
          <div class="display-1">{{sitename}}</div>
          <h1 class="mb-5">{{description}}</h1>
          <a href="{{app}}" class="btn btn-outline btn-xl">go to app</a>
        </div>
      </div>
      <div class="col-lg-8 my-auto">
        <div class="device-container">
          <div class="device-mockup macbook">
            <div class="device">
              <div class="screen">
                <img src="/img/screenshot.png" class="img-fluid" alt="">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<section>
  <div class="container">
    {{#each features}}
    <div class="row">
      {{#if left}}
      <div class="col-lg-7">
        <img src="/img/{{image}}" class="img-fluid border rounded shadow border-primary" alt="">
      </div>
      <div class="col-lg-5">
        <div class="ml-3 mt-5">
          <h3>{{title}}</h3>
          <p>{{description}}</p>
        </div>
      </div>
      {{/if}}
      {{#if right}}
      <div class="col-lg-5">
        <div class="mr-3 mt-5">
          <h3>{{title}}</h3>
          <p>{{description}}</p>
        </div>
      </div>
      <div class="col-lg-7">
        <img src="/img/{{image}}" class="img-fluid border rounded shadow border-primary" alt="">
      </div>
      {{/if}}
    </div>
    <hr class="my-5">
    {{/each}}
  </div>
</section>

<section class="bg-light">
  <div class="container">
    <div class="section-heading">
      <h2>
        <Fieldset>{{newsletter.title}}</Fieldset>
      </h2>
    </div>
    <div class="row">
      <div class="col-lg-6">
        {{#each newsletter.subscriptions}}
        <h3><small><i class="fa fa-check text-primary"></i></small> {{this}}</h3>
        {{/each}}
        <p class="text-muted">{{{newsletter.description}}}</p>
      </div>
      <div class="col-lg-6">
        {{>_mailerlite-signup}}
      </div>
    </div>
  </div>
</section>

