{{>_header}}
<div class="wrapper wrapper-dark d-flex justify-content-center">
    <div class="d-flex flex-column">
        <div class="centerbox">
            <h1>BALANCE</h1>
            <div class="card">
                <div class="card-body">
                    <h2 class="mb-3">SIGN UP</h2>
                    <form>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" class="form-control">
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox"> I accept
                                <a href data-toggle="modal" data-target="#modal-terms">terms of use</a>
                            </label>
                        </div>
                        <div class="form-group m-0">
                            <a href="signin.html" class="btn btn-block btn-outline-primary">Sign Up</a>
                        </div>
                    </form>
                    <div class="more">
                        <p>Do you have an account?
                            <a href="signin.html">Sign In</a>
                        </p>
                    </div>
                </div>
            </div>
            {{>_copyright}}
        </div>
    </div>
</div>
{{>_modal_tos}} {{>_footer}}